# Environment
ENVIRONMENT=development

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Authentication (generate a secure random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-characters-change-in-production
JWT_ALGORITHM=HS256

# Lingo.dev
LINGO_API_KEY=lingo_...

# OpenRouter (for Gemini 2.0 Flash Lite)
OPENROUTER_API_KEY=sk-or-v1-...

# Winston AI (for plagiarism detection)
WINSTON_API_KEY=your-winston-api-key

# Hugging Face (Legacy - can be removed after Gemini migration)
HF_API_KEY=hf_...

# API Keys (Optional - all free, no auth required)
SEMANTIC_SCHOLAR_API_KEY=  # Optional, increases rate limits
CROSSREF_EMAIL=your@email.com  # Polite pool access

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
